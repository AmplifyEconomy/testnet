{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "ES5",
      "module": "CommonJS",
      "lib": ["ESNext", "DOM"],
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "isolatedModules": false,
      "downlevelIteration": true,
      "outDir": "dist"
    },
    "exclude": [
        "docker",
        "node_modules"
    ],
    "include": [
      "src/**/*.ts",
      "test/**/*.ts"
    ]
  }